/* Electronic Die
By Teresa Le
An electronic die that "rolls" a random number when the
push button is pressed. */

// Push button constant
const int buttonPin = 13;

void setup() {
  // LED pin definitions
  pinMode(1, OUTPUT);
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);

  // Push button definition
  pinMode(buttonPin, INPUT);

}

void loop() 
{
  // Define variables to hold pushbutton states
  int buttonState;
  // Read current pushbutton state 
  buttonState = digitalRead(buttonPin); 

  // If the button is being pushed..
  if (buttonState == LOW)
  {
    // Generate a number from 1 to 6 
    int randNumber = random(1, 8);
     
    // Light pins 1-randNumber
    while(randNumber > 0) {
      digitalWrite(randNumber--, HIGH);
   }
   }
   }

